{
  "name": "christophlehmann/fluid-lint",
  "description": "Syntax check for Fluid templates",
  "type": "typo3-cms-extension",
  "license": [
    "GPL-2.0-or-later"
  ],
  "require": {
    "typo3/cms-core": "^13.4",
    "typo3/cms-fluid": "^13.4",
    "typo3/cms-extensionmanager": "^13.4"
  },
  "autoload": {
    "psr-4": {
      "Lemming\\FluidLint\\": "Classes/"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "allow-plugins": {
      "typo3/cms-composer-installers": true,
      "typo3/class-alias-loader": true
    }
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "fluid_lint",
      "web-dir": ".Build/public"
    },
    "branch-alias": {
      "dev-main": "13.4-dev"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^1.9",
    "typo3/coding-standards": "^0.8"
  }
}
